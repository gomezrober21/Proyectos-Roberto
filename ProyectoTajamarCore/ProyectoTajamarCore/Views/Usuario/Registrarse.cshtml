@model ProyectoTajamarCore.Models.Usuario

@{
    ViewData["Title"] = "Registrarse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Registrarse</title>

    <!-- Icons font CSS-->
    <link href="~/Bootstrap/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all" />
    <link href="~/Bootstrap/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all" />
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="~/Bootstrap/vendor/select2/select2.min.css" rel="stylesheet" media="all" />
    <link href="~/Bootstrap/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all" />
    <!-- Main CSS-->
    <link href="~/Bootstrap/Content/main.css" rel="stylesheet" media="all" />
    <link href="~/Bootstrap/Content/sweetalert.min.css" rel="stylesheet" media="all" />
</head>

<body>
    <div class="page-wrapper bg-gra-03 p-t-40 p-b-45">
        <div class="wrapper wrapper--w790">
            <div class="card card-5">
                <div class="card-heading">
                    <h2 class="title">RELLENE ESTE FORMULARIO PARA PEDIR SU CITA</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Registrarse">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-row">
                            <div class="name">Nombre de usuario</div>
                            <div class="value">
                                <input asp-for="NombreUsuario" class="form-control" />
                                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                            </div>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-row">
                            <div class="name">Nombre</div>
                            <div class="value">
                                <input asp-for="Contrasena" class="form-control" />
                                <span asp-validation-for="Contrasena" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">Contraseña</div>
                            <div class="value">
                                <input asp-for="Nombre"  type="password" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">Apellido</div>
                            <div class="value">
                                <input asp-for="Apellido" class="form-control" />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">Edad</div>
                            <div class="value">
                                <input asp-for="Edad" class="form-control" />
                                <span asp-validation-for="Edad" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">Telefono</div>
                            <div class="value">
                                <input asp-for="Telefono" class="form-control" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                        </div>
                        <div>
                            <div class="form-row">
                                <div class="name">Email</div>
                                <div class="value">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                            <div>
                                <input type="submit" value="Registrarse" class="btn btn--radius-2 btn--red" id="btnconfirmar" />  
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/Bootstrap/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/Bootstrap/vendor/select2/select2.min.js"></script>
    <script src="~/Bootstrap/vendor/datepicker/moment.min.js"></script>
    <script src="~/Bootstrap/vendor/datepicker/daterangepicker.js"></script>
    <script src="~/Scripts/sweetalert.min.js"></script>
    <!-- Main JS-->
    <script src="~/Scripts/global.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnconfirmar").click(function () {
                swal({
                    title: "Registro completado",
                    text: "Gracias por unirte a nosotros, ahora podrás disfrutar de más ventajas.",
                    type: 'success',
                    showCancelButtonClass: "btn-primary",
                    confirmButtonText: 'OK'


                });
            });
        });
    </script>
</body>
</html>

